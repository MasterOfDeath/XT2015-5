@{ 
    var AdminsRole = "admins";
}

<nav class="navbar navbar-default navbar-static-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Photos</a>
        </div>

        

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <form class="navbar-form navbar-left" role="search" method="post" action="~/Pages/Photos.cshtml">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchInput" placeholder="Search photos ...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="submit">Go</button>
                    </span>
                </div>
            </form>

            <ul class="nav navbar-nav">
                <li>
                    <p class="navbar-btn">
                        <a href="~/Pages/Upload" class="btn btn-default">Upload</a>
                    </p>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="~/Pages/Albums">My Photos</a></li>
                }
            </ul>

            <ul class="nav navbar-nav navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle glyphicon glyphicon-user" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><b> @User.Identity.Name</b><b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            @if (User.IsInRole(AdminsRole))
                            {
                                <li><a href="/user/preferences"><i class="glyphicon glyphicon-cog"></i> Preferences</a></li>
                                <li class="divider"></li>
                            }
                            <li><a href="~/Pages/SignOut"><i class="glyphicon glyphicon-off"></i> Logout</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li><a href="~/Pages/SignIn">Sign In</a></li>
                    <li><a href="~/Pages/SignUp">Registration</a></li>
                }
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>